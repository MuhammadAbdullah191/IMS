<div class="container">
  <div class="text-center m-5">
    <%= link_to "Create New Order", new_order_path, class: "btn btn-success" %>
  </div>
  <div class="text-center">
    <h1>Orders</h1>
  </div>
  <div class = 'text-center'>
    <%= render 'orders/search_form' %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Sr No</th>
        <th>Order ID</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each_with_index do |order, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= order.id %></td>
          <td><%= order.created_at %></td>
          <td>
            <%= link_to "View", order_path(order), class: "btn btn-dark" %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger #{showCss}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='p-3'>
    <%= paginate @orders %>
  </div>
</div>
