<div class="container d-flex flex-column justify-content-center aligh-items-center p-5">
  <div class="text-center">
    <h1 class="text-secondary">Manage Categories</h1>
  </div>
  <div class="text-center">
    <%= search_form_for @q, url: categories_path do |f| %>
      <div class = 'p-2'>
        <%= f.label :title_or_description_cont %>
        <%= f.search_field :title_or_description_cont, placeholder: 'title or desc contains' %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="container p-1">
      <div class="row">
        <div class="col-12">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Sr. No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col" class="col-2">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each_with_index do |category,index| %>
                <tr>
                  <th scope="row"><%= index+1 %></th>
                  <td><%= category.title %></td>
                  <td><%= category.description %></td>
                  <td class= 'text-center w-25'>
                    <% if category.image.attached? %>
                      <%= image_tag category.image, class: 'w-50 rounded' %>
                    <% else %>
                      <p>N/A</p>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <%= link_to category_path(category), class: "btn btn-primary"  do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_category_path(category), class: "btn btn-success"  do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class='p-3'>
            <%= paginate @categories %>
          </div>
          <div class="text-center">
            <%= link_to "Create New Category", new_category_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
