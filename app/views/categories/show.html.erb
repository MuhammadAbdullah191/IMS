<div class="container m-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Category Details</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @category.id %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @category.name %></td>
          </tr>
          <tr>
            <th>Description</th>
            <td><%= @category.description %></td>
          </tr>
          <tr>
            <th>Created At</th>
            <td><%= formatted_date(@category.created_at) %></td>
          </tr>
          <tr>
            <th>Updated At</th>
            <td><%= formatted_date(@category.updated_at) %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to 'Back to Category', categories_path, class: 'btn btn-secondary' %>
    </div>
    <%= render partial: 'layouts/show_image', locals: { resource: @category } %>
  </div>
</div>
