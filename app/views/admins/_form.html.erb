<%= form_with model: admin, local: true, validate: true do |f| %>
  <div class="form-group">
    <label for= "inputAddress"> Username </label>
    <%= f.text_field :username, class: 'form-control' %>
  </div>
  <div class="field form-group d-flex flex-column">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-text text-muted' %>
    <small id="emailHelp" class="form-text text-muted"> i.e abc@xyz.com </small>
  </div>
  <div class="field form-group d-flex flex-column">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>
  <div class="field form-group d-flex flex-column">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="form-group">
    <label for="inputAddress2"> Phone </label>
    <%= f.number_field :phone, class: 'form-control' %>
  </div>
  <div class="field form-group d-flex flex-column">
    <%= f.label :role %>
    <%= f.select :role, Admin.roles.keys.map { |type| [type.capitalize, type] }, { include_blank: true },class: "form-control" %>
  </div>
  <div class="actions py-3">
    <%= f.submit "Submit", class: 'btn btn-danger' %>
    <%= link_to "Cancel", admins_path, class:"btn btn-secondary" %>
  </div>
<% end %>
