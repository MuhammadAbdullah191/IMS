<div class="container m-3">
  <div class="row">
    <div class="col-md-6">
      <h2>User Details</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>Eamil</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>Username</th>
            <td><%= @user.username %></td>
          </tr>
          <tr>
            <th>Created At</th>
            <td><%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %></td>
          </tr>
          <tr>
            <th>Updated At</th>
            <td><%= @user.updated_at.strftime('%B %d, %Y at %I:%M %p') %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to 'Back to Admin Dashboard', admins_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
