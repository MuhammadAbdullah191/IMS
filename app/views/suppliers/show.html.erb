<div class="container m-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Supplier Details</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @supplier.id %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @supplier.name %></td>
          </tr>
          <tr>
            <th>Address</th>
            <td><%= @supplier.address %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @supplier.email %></td>
          </tr>
          <tr>
            <th>Phone</th>
            <td><%= @supplier.phone %></td>
          </tr>
          <tr>
            <th>Created At</th>
            <td><%= formatted_date(@supplier.created_at) %></td>
          </tr>
          <tr>
            <th>Updated At</th>
            <td><%= formatted_date(@supplier.updated_at) %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "Back to Suppliers", suppliers_path, class: "btn btn-secondary" %>
    </div>
    <%= render partial: 'layouts/show_image', locals: { resource: @supplier } %>
  </div>
</div>
