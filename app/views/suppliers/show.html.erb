<div class="container m-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>Supplier Details</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @supplier.id %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @supplier.name %></td>
          </tr>
          <tr>
            <th>Address</th>
            <td><%= @supplier.address %></td>
          </tr>
          <tr>
            <th>Phone</th>
            <td><%= @supplier.email %></td>
          </tr>
          <tr>
            <th>Created At</th>
            <td><%= @supplier.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
          </tr>
          <tr>
            <th>Updated At</th>
            <td><%= @supplier.updated_at.strftime("%B %d, %Y at %I:%M %p") %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "Back to Suppliers", suppliers_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
