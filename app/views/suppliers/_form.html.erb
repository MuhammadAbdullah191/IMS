 <%= form_with model: supplier , local: true, validate: true do |f| %>
  <div class= "form-group">
    <label for= "inputAddress">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class= "field form-group d-flex flex-column">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-text text-muted' %>
    <small id= "emailHelp" class= "form-text text-muted">i.e abc@xyz.com</small>
  </div>
  <div class= "form-group">
    <label for= "inputAddress2">Phone</label>
    <%= f.number_field :phone, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Address</label>
    <%= f.text_field :address, class: 'form-control', placeholder: '1234 Main St'%>
  </div>
  <div class="field form-group d-flex flex-column py-2">
    <%= f.label :images %>
    <% if supplier.image.attached? && supplier.image.blob.image? && supplier.image.id.present? %>
      <%= image_tag supplier.image, class: 'w-25 rounded m-3 ' %>
      <%= link_to 'Remove', delete_image_attachment_product_url(supplier.image.id),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
      <footer class="blockquote-footer m-1"> <cite title="Source Title">Change Image ? </cite></footer>
    <% else %>
      <p>N/A</p>
      <footer class="blockquote-footer m-1"> <cite title="Source Title">Add Image ? </cite></footer>
    <% end %>
    <%= f.file_field :image %>
  </div>
  <div class="actions py-3">
    <%= f.submit 'Submit', class: 'btn btn-danger' %>
    <%= link_to 'Cancel', suppliers_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
