 <%= form_with model: supplier , local: true do |f| %>
  <div class= "form-group">
    <label for= "inputAddress">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class= "field form-group d-flex flex-column">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text text-muted' %>
    <small id= "emailHelp" class= "form-text text-muted">i.e abc@xyz.com</small>
  </div>

  <div class= "form-group">
    <label for= "inputAddress2">Phone</label>
    <%= f.number_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="inputAddress2">Address</label>
    <%= f.text_field  :address, class: 'form-control', placeholder: '1234 Main St'%>
  </div>

  <div class="actions py-3">
    <%= f.submit "Submit", class: 'btn btn-danger' %>
    <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
  </div>
  
<% end %>
