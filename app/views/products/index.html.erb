<div class="container d-flex flex-column justify-content-center aligh-items-center p-5">
  <div class="text-center">
    <h1 class="text-secondary">Manage Products</h1>
  </div>
  <div class="container p-1">
    <div class="row">
      <div class="col-12">

        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Sr. No</th>
              <th scope="col">Name</th>
              <th scope="col">Stock</th>
              <th scope="col">Description</th>
              <th scope="col">Price</th>
              <th scope="col">Location Name</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>

            <% @products.each_with_index do |product,index| %>
              <tr>
                <th scope="row"><%= index+1 %></th>
                <td><%= product.name %></td>
                <td><%= product.stock %></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= product.location_name %></td>
                <td class="text-center">
                  <%= link_to product_path(product), class: "btn btn-dark"  do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_product_path(product), class: "btn btn-success"  do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>

          </tbody>
        </table>
				
        <div class="text-center">
          <%= link_to "Create New Product", new_product_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
