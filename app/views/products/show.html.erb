<div class="container m-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Product Details</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @product.id %></td>
          </tr>
          <tr>
            <th>Stock</th>
            <td><%= @product.stock %></td>
          </tr>
          <tr>
            <th>Description</th>
            <td><%= @product.description %></td>
          </tr>
          <tr>
            <th>Price</th>
            <td><%= number_to_currency(@product.price) %></td>
          </tr>
          <tr>
            <th>Location Name</th>
            <td><%= @product.location_name.present? ? @product.location_name : 'N/A' %></td>
          </tr>
          <tr>
            <th>Suppliers</th>
            <td>
              <% @product.suppliers.each do |supplier| %>
                - <%= supplier.name %><br>
              <% end %>
            </td>
          </tr>
          <tr>
            <tr>
              <th>Brand Name</th>
              <td><%= @product.brand.name %></td>
            </tr>
            <tr>
              <th>Categories</th>
              <td>
                <% @product.categories.each do |category| %>
                  - <%= category.name %><br>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>Created At</th>
              <td><%= formatted_date(@product.created_at) %></td>
            </tr>
            <tr>
              <th>Updated At</th>
              <td><%= formatted_date(@product.updated_at) %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to 'Back to Product', products_path, class: 'btn btn-secondary' %>
      </div>
      <%= render partial: 'layouts/show_image', locals: { resource: @product } %>
    </div>
  </div>
