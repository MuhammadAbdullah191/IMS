<%= form_with model: brand , local: true do |f| %>
  <div class= "form-group">
    <label for= "inputAddress">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group py-2">
    <label for="exampleFormControlTextarea1">Description</label>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="field form-group d-flex flex-column py-2">
    <%= f.label :images %>
    <% if brand.image.attached? && brand.image.blob.image? %>
      <%= image_tag brand.image, class: 'w-25 rounded m-3 ' %>
      <%= link_to 'Remove', delete_image_attachment_product_url(brand.image.id),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
      <footer class="blockquote-footer m-1"> <cite title="Source Title">Change Image ? </cite></footer>
    <% else %>
      <p>N/A</p>
      <footer class="blockquote-footer m-1"> <cite title="Source Title">Add Image ? </cite></footer>
    <% end %>
    <%= f.file_field :image %>
  </div>
  <div class="actions py-3">
    <%= f.submit "Submit", class: 'btn btn-danger' %>
    <%= link_to "Cancel", brands_path, class: "btn btn-secondary" %>
  </div>
<% end %>
