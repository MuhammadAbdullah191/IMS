<div class="container d-flex flex-column justify-content-center aligh-items-center p-5">
  <div class="text-center">
    <h1 class="text-secondary">Manage Brands</h1>
  </div>
  <div class="text-center">
    <%= search_form_for @q, url: brands_path do |f| %>
      <div class = 'p-2'>
        <%= f.label :name_or_description_cont %>
        <%= f.search_field :name_or_description_cont, placeholder: 'name or desc contains' %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="container p-1">
      <div class="row">
        <div class="col-12">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Sr. No</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @brands.each_with_index do |brand,index| %>
                <tr>
                  <th scope="row"><%= index+1 %></th>
                  <td><%= brand.name %></td>
                  <td><%= brand.description %></td>
                  <td class="text-center">
                    <%= link_to brand_path(brand), class: "btn btn-primary"  do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_brand_path(brand), class: "btn btn-success"  do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="text-center">
            <%= link_to "Create New Brand", new_brand_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
