<div class="container text-center <%= show_css %>">
  <h3>Welcome to analytics page</h3>
  <div class = 'card m-5 p-2'>
    <h3>Total Orders</h3>
    <%= line_chart orders_by_day, xtitle: "Date", ytitle: "Orders" %>
    <button type="button" class="btn btn-primary">
      Total Orders <span class="badge badge-light"><%= total_orders %></span>
    </button>
  </div>
  <div class="container my-3">
    <div class="row">
      <div class = 'col-sm card mr-1 p-2'>
        <h3>Revenue Genrated</h3>
        <%= line_chart revenue_by_day, xtitle: "Date", ytitle: "Orders" %>
        <button type="button" class="btn btn-primary m-2">
          Total Revenue Genrated <span class="badge badge-light"><%= total_orders_price %> Rs</span>
        </button>
      </div>
      <div class = 'col-sm card p-2'>
        <h3>Top 5 Products by Revenue</h3>
        <%= pie_chart top_products_by_revenue, class: 'm-5' %>
        <button type="button" class="btn btn-primary m-2">
          Total Revenue Generated by Top 5 Products: <span class="badge badge-light"><%= top_revenue_products_sum %> Rs</span>
        </button>
      </div>
    </div>
    <div class = 'card m-5 p-2'>
      <h3>Quantity of Products Sold</h3>
      <%= pie_chart quantity_by_product, xtitle: 'Date', ytitle: 'Orders' %>
    </div>
  </div>
</div>
